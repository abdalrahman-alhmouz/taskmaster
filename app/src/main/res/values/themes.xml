<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Taskmaster" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <taskTable name="colorPrimary">@color/purple_500</taskTable>
        <taskTable name="colorPrimaryVariant">@color/purple_700</taskTable>
        <taskTable name="colorOnPrimary">@color/white</taskTable>
        <!-- Secondary brand color. -->
        <taskTable name="colorSecondary">@color/teal_200</taskTable>
        <taskTable name="colorSecondaryVariant">@color/teal_700</taskTable>
        <taskTable name="colorOnSecondary">@color/black</taskTable>
        <!-- Status bar color. -->
        <taskTable name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</taskTable>
        <!-- Customize your theme here. -->
    </style>
</resources>